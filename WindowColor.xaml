<Window x:Class="notepad___.WindowColor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:notepad___"
        mc:Ignorable="d"
        Title="WindowColor" Height="150" Width="200">
    <UniformGrid Columns="2">
        <Label Content="R" />
        <TextBox x:Name="rTextBox" />
        <Label Content="G" />
        <TextBox x:Name="gTextBox" />
        <Label Content="B" />
        <TextBox x:Name="bTextBox" />
        <Label/>
        <Button Click="ChangeColor">Zmień</Button>
    </UniformGrid>
</Window>
